import discord
from discord.ext import commands
import random
import time

#Set up the bot
client = commands.Bot(command_prefix = '.')
client.remove_command("help")

#Run as soon as bot is live
@client.event
async def on_ready(): 
    #set the status
    await client.change_presence(activity=discord.Game("with Jesus - .help")) 
    #Send online message
    print("--Bot is online--") 

#----------On Client Event----------#

#Welcome new members to the server
@client.event
async def on_member_join(ctx, member):
    await ctx.send(f'Blessings be upon you {member}.')

#Error messages
@client.event
async def on_command_error(ctx, error):
    #Command not found
    if isinstance(error, commands.CommandNotFound):
        await ctx.send('That is not a valid command. Type .help to see all commands.')

#----------On Client Command----------#    

#PC reminder command
@client.command()
async def remind(ctx):
    #Ping Shabby
    await ctx.send("<@345243492995432468>") 
    #Send image
    await ctx.send(file=discord.File('Get_A_PC.jpeg')) 

#What game should I play
@client.command(pass_context=True)
async def play(ctx):
    responses = ["Minecraft",
                "Among Us",
                "Civ VI",
                "CS:GO",
                "Golf with your friends",
                "Risk",
                "Terraria",
                "COD: Black Ops Cold War - Multiplayer",
                "COD: Black Ops Cold War - Zombies",
                "COD: Modern Warfare",
                "UNO",
                "Farming Simulator",
                "With your dick",
                "Battlefield V",
                "Fortnite",
                "Life"]
    await ctx.send(f'Go play: {random.choice(responses)}.')

@client.command(pass_context=True)
async def flip(ctx):
    coins = ["heads",
            "tails"]
    await ctx.send(f'It came up {random.choice(coins)}.')

